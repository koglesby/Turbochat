<% if @current_room && @current_room.participant?(@current_room, user) %>
  <% isActive = 'active' %>
<% else %>
  <% isActive = '' %>
<% end %>
<div class="user">
  <li class="list-group-item user_list_item <% isActive %>">
    <div class="row">
      <div class="col-12 d-flex align-items-center justify-content-between">
        <div class="icon-container">
          <%= link_to image_tag(current_user.chat_avatar, class: 'chat_pfp'), current_user %>
          <%= turbo_stream_from "user_status" %>
          <div>
            <%= render "users/status", user: current_user %>
          </div>
        </div>
        <%= link_to user.email, user, class: 'ms-2 me-auto username', data: {turbo: "false"} %>
        <%= render 'rooms/joinable_link', room: room %>
      </div>
    </div>
    <%= turbo_frame_tag [dom_id(room), "user_last_message"] do %>
      <%= render "users/last_message",
    last_message: last_message,
    sender: sender %>
    <% end %>
  </li>
</div>
