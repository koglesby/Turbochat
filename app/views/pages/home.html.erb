<div class="px-4 py-3">
  <h1>Turbochat</h1>
  <% if current_user %>
    <%= image_tag(current_user.avatar_thumbnail)%>
    <br>
    <%= link_to "Start Chatting", rooms_path, class: "my-1 btn btn-success" %>
    <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-outline-primary my-1" %>
    <br>
    <%= link_to "Edit Account", edit_user_registration_path, class: "btn btn-secondary" %>
  <% else %>
    <%= link_to "Login", new_user_session_path %>
    <%= link_to "Sign Up", new_user_registration_path %>
  <% end %>
</div>
